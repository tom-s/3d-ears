{
  "name": "boilerplate-koa-redux-react",
  "version": "1.0.0",
  "description": "A boilerplate for a Koa Redux React application with Webpack, Mocha and SASS",
  "main": "index.js",
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-0"
    ]
  },
  "scripts": {
    "dev": "npm run server:dev & npm run front:dev",
    "server:dev": "nodemon --watch api/src/ api/src/server.js --exec babel-node",
    "server:build": "babel lib -d dist",
    "front:build": "`npm bin`/webpack",
    "front:dev": "`npm bin`/webpack-dev-server",
    "front-lint": "`npm bin`/eslint . --ext .js --ext .jsx",
    "front:clean": "rm -rf app/dist app/build",
    "test": "`npm bin`/mocha --compilers js:babel-core/register --require ./app/tests/test_helper.js '*/tests/**/*.@(js|jsx)'",
    "test:watch": "npm run test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mezod/boilerplate-koa-redux-react.git"
  },
  "keywords": [
    "boilerplate",
    "koa",
    "redux",
    "react",
    "webpack",
    "mocha",
    "sass"
  ],
  "author": "Joan Boixad√≥s",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mezod/boilerplate-koa-redux-react/issues"
  },
  "homepage": "https://github.com/mezod/boilerplate-koa-redux-react#readme",
  "dependencies": {
    "babel-cli": "^6.5.1",
    "babel-core": "^6.3.15",
    "babel-eslint": "^5.0.0-beta4",
    "babel-loader": "^6.2.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "bookshelf": "^0.9.1",
    "css-loader": "^0.23.0",
    "history": "^1.14.0",
    "html-webpack-plugin": "^2.7.1",
    "immutable": "^3.7.5",
    "isomorphic-fetch": "^2.2.0",
    "knex": "^0.9.0",
    "koa": "^1.1.2",
    "koa-cors": "0.0.16",
    "koa-passport": "^1.2.0",
    "koa-route": "^2.4.2",
    "koa-router": "^5.4.0",
    "koa-session": "^3.3.1",
    "mysql": "^2.9.0",
    "node-sass": "^3.4.2",
    "passport-facebook": "^2.1.0",
    "passport-google-auth": "^1.0.1",
    "passport-local": "^1.0.0",
    "passport-twitter": "^1.0.4",
    "react": "^0.14.3",
    "react-dom": "^0.14.3",
    "react-redux": "^4.0.0",
    "react-router": "^1.0.1",
    "redux": "^3.0.4",
    "redux-thunk": "^1.0.0",
    "sass-loader": "^3.1.2",
    "style-loader": "^0.13.0",
    "webpack": "^1.12.9"
  },
  "devDependencies": {
    "chai": "^3.4.1",
    "chai-immutable": "^1.5.3",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^4.0.0",
    "eslint-loader": "^1.1.1",
    "eslint-plugin-react": "^3.11.3",
    "jsdom": "^7.2.0",
    "mocha": "^2.3.4",
    "react-hot-loader": "^1.3.0",
    "redux-devtools": "^3.0.1",
    "webpack-dev-server": "^1.14.0"
  }
}
